<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ch.betz_engineering.openvine.MainActivity">

    <!-- Camera preview -->
    <TextureView
        android:id="@+id/viewFinder"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <!-- Record button with progress ring -->
    <FrameLayout
        android:id="@+id/recordButtonContainer"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <!-- Outer progress ring -->
        <ch.betz_engineering.openvine.ui.ProgressRingView
            android:id="@+id/progressRing"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Inner red button -->
        <View
            android:id="@+id/video_capture_button"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/red_circle"
            android:elevation="4dp"/>
    </FrameLayout>

    <!-- Camera switch button -->
    <ImageButton
        android:id="@+id/switch_camera_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        app:tint="@android:color/white"
        android:layout_marginEnd="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="@string/switch_camera"
        android:src="@drawable/outline_autorenew_24"
        app:layout_constraintBottom_toBottomOf="@id/recordButtonContainer"
        app:layout_constraintEnd_toStartOf="@id/recordButtonContainer"
        app:layout_constraintTop_toTopOf="@+id/recordButtonContainer" />

    <!-- Open gallery button -->
    <ImageButton
        android:id="@+id/gallery_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitCenter"
        app:tint="@android:color/white"
        android:layout_marginStart="32dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Play last file"
        android:src="@drawable/baseline_play_circle_outline_24"
        app:layout_constraintBottom_toBottomOf="@id/recordButtonContainer"
        app:layout_constraintStart_toEndOf="@id/recordButtonContainer"
        app:layout_constraintTop_toTopOf="@id/recordButtonContainer" />


    <!-- Center guideline -->
    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/vertical_centerline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent=".50" />

</androidx.constraintlayout.widget.ConstraintLayout>
